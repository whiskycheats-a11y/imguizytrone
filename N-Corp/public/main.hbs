    <script type="text/javascript">
        $(document).ready(function () {
            // Particle System
            const canvas = document.getElementById('particleCanvas');
            const ctx = canvas.getContext('2d');
            let particles = [];

            function initParticles() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
                particles = [];
                for (let i = 0; i < 100; i++) {
                    particles.push({
                        x: Math.random() * canvas.width,
                        y: Math.random() * canvas.height,
                        radius: Math.random() * 3 + 1,
                        speedX: (Math.random() - 0.5) * 1.5,
                        speedY: (Math.random() - 0.5) * 1.5,
                        opacity: Math.random() * 0.8
                    });
                }
            }

            function animateParticles() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);

                // Draw Connections First
                ctx.lineWidth = 0.5;
                for (let i = 0; i < particles.length; i++) {
                    for (let j = i + 1; j < particles.length; j++) {
                        const dx = particles[i].x - particles[j].x;
                        const dy = particles[i].y - particles[j].y;
                        const distance = Math.sqrt(dx * dx + dy * dy);

                        if (distance < 150) {
                            ctx.strokeStyle = `rgba(220, 38, 38, ${0.15 * (1 - distance / 150)})`;
                            ctx.beginPath();
                            ctx.moveTo(particles[i].x, particles[i].y);
                            ctx.lineTo(particles[j].x, particles[j].y);
                            ctx.stroke();
                        }
                    }
                }

                // Draw Particles
                ctx.fillStyle = 'rgba(220, 38, 38, 0.4)';
                particles.forEach(p => {
                    p.x += p.speedX;
                    p.y += p.speedY;

                    if (p.x < 0 || p.x > canvas.width) p.speedX *= -1;
                    if (p.y < 0 || p.y > canvas.height) p.speedY *= -1;

                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.radius, 0, Math.PI * 2);
                    ctx.fill();

                    // Inner Glow Node
                    ctx.fillStyle = 'rgba(220, 38, 38, 0.8)';
                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.radius * 0.4, 0, Math.PI * 2);
                    ctx.fill();
                    ctx.fillStyle = 'rgba(220, 38, 38, 0.4)';
                });

                requestAnimationFrame(animateParticles);
            }

            initParticles();
            animateParticles();
            window.addEventListener('resize', initParticles);


            // Header Scroll Effect
            $(window).scroll(function () {
                if ($(window).scrollTop() > 50) {
                    $('header').addClass('py-2 bg-black/80').removeClass('py-0');
                } else {
                    $('header').removeClass('py-2 bg-black/80').addClass('py-0');
                }
            });

            // New Mobile Menu Logic
            const $mobileMenu = $('#mobile-menu');
            const $menuBtn = $('#mobile-menu-btn');
            const $closeBtn = $('#close-mobile-menu');

            function toggleMenu() {

                // Toggle translate class for sliding effect
                if ($mobileMenu.hasClass('translate-x-full')) {
                    $mobileMenu.removeClass('translate-x-full');
                }

                else {
                    $mobileMenu.addClass('translate-x-full');
                }
            }

            $menuBtn.click(toggleMenu);
            $closeBtn.click(toggleMenu);

            $(".login-btn").click(() => {
                document.location.href = "/login";
            });

            $(".register-btn").click(() => {
                document.location.href = "/register";
            });

            $(".dashboard-btn").click(function (e) {
                if ($(this).is("button")) document.location.href = "/dashboard";
            });
        });
    </script>
