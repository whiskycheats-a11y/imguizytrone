<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>N Corp.{{#if title}} - {{title}}{{/if}}</title>

    <script src="./js/jquery.js"></script>
    <script src="./js/tailwindcss.js"></script>

    <style>
        @font-face {
            font-family: 'Regular';
            src: url(/fonts/Rajdhani-Regular.ttf);
        }

        :root {
            --bg-color: #050505;
            --primary-red: #dc2626;
            /* Crimson Red 600 */
            --dark-red: #7f1d1d;
            /* Red 900 */
            --text-color: #e5e7eb;
            --glass-bg: rgba(10, 10, 10, 0.6);
            --neon-glow: 0 0 15px rgba(220, 38, 38, 0.3);
        }

        html {
            user-select: none;
            -ms-user-select: none;
            -webkit-user-select: none;
            scroll-behavior: smooth;
        }

        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            width: 100vw;
            position: relative;
        }

        body {
            font-family: 'Regular', 'Rajdhani', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            /* Enable 3D space */
        }

        body::-webkit-scrollbar {
            width: 4px;
        }

        body::-webkit-scrollbar-track {
            background: #020202;
        }

        body::-webkit-scrollbar-thumb {
            background: #450a0a;
            border-radius: 2px;
            box-shadow: none;
        }

        body::-webkit-scrollbar-thumb:hover {
            background: var(--primary-red);
            box-shadow: 0 0 5px var(--primary-red);
        }

        /* 3D Glass Card */
        .glass {
            background: var(--glass-bg);
            border: 1px solid rgba(220, 38, 38, 0.2);
            backdrop-filter: blur(10px);
            box-shadow: 0 0 15px rgba(220, 38, 38, 0.1);
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .glass:hover {
            box-shadow: 0 0 25px rgba(220, 38, 38, 0.2);
            border-color: rgba(220, 38, 38, 0.5);
        }

        .glass-card {
            background: linear-gradient(135deg, rgba(20, 10, 10, 0.95), rgba(10, 5, 5, 0.98));
            border: 1px solid rgba(220, 38, 38, 0.3);
            box-shadow: 0 10px 30px -10px rgba(220, 38, 38, 0.2);
            transform: translateZ(0);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .glass-card:hover {
            transform: translateZ(20px) scale(1.02);
            box-shadow: 0 20px 40px -10px rgba(220, 38, 38, 0.4);
            border-color: var(--primary-red);
        }

        .text-glow {
            text-shadow: var(--neon-glow);
        }

        .neon-text {
            color: var(--primary-red);
            text-shadow: 0 0 5px var(--primary-red);
        }

        .btn-3d {
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.1s;
        }

        .btn-3d:active {
            transform: translateY(2px);
        }

        input[type="password"]::-ms-clear,
        input[type="password"]::-ms-reveal {
            display: none;
        }

        /* Global Animations */
        @keyframes fade-in-up {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse-glow {

            0%,
            100% {
                text-shadow: 0 0 10px var(--primary-red), 0 0 20px var(--primary-red);
            }

            50% {
                text-shadow: 0 0 20px var(--primary-red), 0 0 40px var(--primary-red);
            }
        }

        @keyframes float {
            0% {
                transform: translateY(0px) rotateX(0deg);
            }

            50% {
                transform: translateY(-10px) rotateX(2deg);
            }

            100% {
                transform: translateY(0px) rotateX(0deg);
            }
        }

        /* Fluid Mesh Blobs */
        .fluid-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -3;
            overflow: hidden;
            pointer-events: none;
            background: #050505;
        }

        .blob {
            position: absolute;
            width: 800px;
            height: 800px;
            background: radial-gradient(circle, rgba(220, 38, 38, 0.15) 0%, transparent 70%);
            filter: blur(150px);
            border-radius: 50%;
            will-change: transform;
        }

        .blob-1 {
            top: -200px;
            left: -200px;
            animation: drift-1 25s infinite alternate ease-in-out;
        }

        .blob-2 {
            bottom: -300px;
            right: -200px;
            background: radial-gradient(circle, rgba(153, 27, 27, 0.15) 0%, transparent 70%);
            animation: drift-2 30s infinite alternate ease-in-out;
        }

        .blob-3 {
            top: 40%;
            left: 50%;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(220, 38, 38, 0.1) 0%, transparent 70%);
            animation: drift-3 20s infinite alternate ease-in-out;
        }

        @keyframes drift-1 {
            from {
                transform: translate(0, 0) scale(1);
            }

            to {
                transform: translate(300px, 200px) scale(1.2);
            }
        }

        @keyframes drift-2 {
            from {
                transform: translate(0, 0) scale(1);
            }

            to {
                transform: translate(-400px, -100px) scale(1.3);
            }
        }

        @keyframes drift-3 {
            from {
                transform: translate(-50%, -50%) scale(1);
            }

            to {
                transform: translate(-20%, -30%) scale(1.1);
            }
        }

        .animate-fade-in-up {
            animation: fade-in-up 0.8s ease-out forwards;
        }

        .animate-pulse-glow {
            animation: pulse-glow 3s infinite;
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }


        /* Neural Grid Background */
        .grid-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 200%;
            background-image:
                linear-gradient(rgba(220, 38, 38, 0.08) 1px, transparent 1px),
                linear-gradient(90deg, rgba(220, 38, 38, 0.08) 1px, transparent 1px);
            background-size: 50px 50px;
            perspective: 1000px;
            transform: rotateX(60deg) translateY(-30%);
            z-index: -1;
            mask-image: linear-gradient(to bottom, transparent, black 15%, black 85%, transparent);
            opacity: 0.4;
            animation: grid-move 20s linear infinite;
        }

        /* Glitch Effect for text */
        .glitch {
            position: relative;
            display: inline-block;
        }
        .glitch::before, .glitch::after {
            content: attr(data-text);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.8;
        }
        .glitch::before {
            color: #ff0000;
            z-index: -1;
            animation: glitch-anim 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
        }
        .glitch::after {
            color: #00ffff;
            z-index: -2;
            animation: glitch-anim 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) reverse both infinite;
        }
        .glitch-hover:hover {
            animation: glitch-anim 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
            color: #ff0000;
        }

        /* Responsive Fixes */
        @media (max-width: 768px) {
            .grid-background {
                background-size: 30px 30px;
                transform: rotateX(60deg) translateY(-10%);
            }
            .product-card {
                height: 380px;
            }
        }

        /* Smoother Card Hover */
        .product-card {
            will-change: transform, opacity, filter;
            backface-visibility: hidden;
        }

        /* Scanlines & Noise Overlays */
        .scanlines {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.1) 50%),
                linear-gradient(90deg, rgba(255, 0, 0, 0.02), rgba(0, 255, 0, 0.01), rgba(0, 0, 255, 0.02));
            background-size: 100% 4px, 3px 100%;
            z-index: 9999;
            pointer-events: none;
            opacity: 0.15;
            mix-blend-mode: overlay;
        }

        .noise-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url("https://grainy-gradients.vercel.app/noise.svg");
            opacity: 0.03;
            z-index: 9998;
            pointer-events: none;
            filter: contrast(150%) brightness(100%);
        }

        @keyframes grid-move {
            0% {
                background-position: 0 0;
            }

            100% {
                background-position: 0 50px;
            }
        }

        /* Border Beam Effect */
        .border-beam {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: inherit;
            pointer-events: none;
            overflow: hidden;
            z-index: 2;
        }

        .border-beam::after {
            content: "";
            position: absolute;
            inset: 0;
            border: 2px solid transparent;
            border-radius: inherit;
            background: linear-gradient(90deg, transparent, var(--primary-red), transparent) border-box;
            mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: destination-out;
            mask-composite: exclude;
            animation: beam-move 3s linear infinite;
        }

        @keyframes beam-move {
            0% {
                left: -100%;
                top: 0;
                transform: translateX(0);
            }

            100% {
                left: 200%;
                top: 0;
                transform: translateX(0);
            }
        }

        .animate-in {
            animation: animate-in 0.5s ease-out forwards;
        }
        @keyframes animate-in {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in { animation: fade-in 0.5s ease-out forwards; }
        @keyframes fade-in { from { opacity: 0; } to { opacity: 1; } }
        .slide-in-from-top-4 { transform: translateY(-1rem); }
        .slide-in-from-bottom-4 { transform: translateY(1rem); }
        .zoom-in-95 { transform: scale(0.95); }

        /* Logo Scan Effect */
        .logo-scan {
            position: relative;
            overflow: hidden;
        }

        .logo-scan::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
