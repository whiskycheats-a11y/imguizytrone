<div
    class="relative min-h-screen w-full flex items-center justify-center p-4 md:p-10 overflow-hidden bg-black selection:bg-sky-600/30 font-inter">

    <!-- ADVANCED TECH BACKGROUND -->
    <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
        <!-- Digital Grid -->
        <div
            class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-[0.03]">
        </div>
        <div class="absolute inset-0 tech-grid"></div>

        <!-- Glowing Orbs -->
        <div
            class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-sky-600/10 rounded-full blur-[120px] animate-pulse">
        </div>
        <div
            class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-sky-600/10 rounded-full blur-[120px] animate-pulse delay-1000">
        </div>

        <!-- Floating Particles (CSS Only) -->
        <div class="particles"></div>
    </div>

    <div class="relative z-10 w-full max-w-5xl flex flex-col md:flex-row items-center justify-center gap-12 p-6">

        <!-- SIDE METRICS PANEL (Hidden on mobile) -->
        <div class="hidden lg:flex flex-col gap-6 w-64 animate-in fade-in slide-in-from-left-8 duration-1000">
            <div class="glass-card p-6 rounded-2xl border border-white/5 space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-[9px] font-bold text-gray-500 uppercase tracking-widest">System Status</span>
                    <div class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></div>
                </div>
                <div class="space-y-3">
                    <div class="h-1 w-full bg-white/5 rounded-full overflow-hidden">
                        <div class="h-full bg-sky-600 w-[65%] animate-pulse"></div>
                    </div>
                    <div class="flex justify-between text-[8px] font-mono text-gray-400">
                        <span>ENCRYPTION</span>
                        <span>ACTIVE</span>
                    </div>
                </div>
                <div class="space-y-1">
                    <p class="text-[10px] font-mono text-sky-500/70">> Initializing Link...</p>
                    <p class="text-[10px] font-mono text-gray-600">> Waiting for Auth</p>
                </div>
            </div>

            <div class="glass-card p-6 rounded-2xl border border-white/5">
                <p class="text-[8px] font-mono text-gray-500 leading-relaxed uppercase tracking-tighter">
                    Secure channel established via node-772. End-to-end encryption verified.
                </p>
            </div>
        </div>

        <!-- MAIN LOGIN CARD -->
        <div class="w-full max-w-md relative group animate-in zoom-in-95 duration-700">
            <!-- Decorative Corners -->
            <div class="absolute -top-2 -left-2 w-8 h-8 border-t-2 border-l-2 border-sky-600/50 rounded-tl-lg z-20">
            </div>
            <div class="absolute -top-2 -right-2 w-8 h-8 border-t-2 border-r-2 border-sky-600/50 rounded-tr-lg z-20">
            </div>
            <div class="absolute -bottom-2 -left-2 w-8 h-8 border-b-2 border-l-2 border-sky-600/50 rounded-bl-lg z-20">
            </div>
            <div class="absolute -bottom-2 -right-2 w-8 h-8 border-b-2 border-r-2 border-sky-600/50 rounded-br-lg z-20">
            </div>

            <div
                class="glass-card p-10 md:p-12 rounded-[2.5rem] border border-white/10 relative overflow-hidden bg-black/40 backdrop-blur-3xl shadow-[0_30px_100px_rgba(0,0,0,0.5)]">
                <!-- Top Detail -->
                <div
                    class="absolute top-0 inset-x-0 h-[1px] bg-gradient-to-r from-transparent via-sky-600/50 to-transparent">
                </div>

                <div class="mb-10 text-center relative">
                    <div
                        class="w-16 h-16 bg-sky-600/10 rounded-2xl mx-auto mb-6 flex items-center justify-center border border-sky-600/20 group-hover:scale-110 transition-transform duration-500">
                        <img src="/image/logo.png" class="w-8 h-8 drop-shadow-[0_0_10px_rgba(14,165,233,0.5)]"
                            alt="N" />
                    </div>
                    <h1 class="text-3xl font-extrabold text-white tracking-tight uppercase mb-2">Admin <span
                            class="text-sky-500">Portal</span></h1>
                    <p class="text-gray-500 font-bold uppercase tracking-[0.3em] text-[9px] opacity-60">Terminal
                        Authentication Required</p>
                </div>

                <form id="admin-login-form" class="space-y-6">
                    <!-- Username -->
                    <div class="space-y-2">
                        <div class="relative group/input">
                            <span
                                class="absolute left-5 top-1/2 -translate-y-1/2 text-gray-600 group-focus-within/input:text-sky-500 transition-colors z-10">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </span>
                            <input type="text" name="user" required
                                class="w-full bg-white/5 border border-white/5 rounded-2xl pl-14 pr-6 py-4 text-sm text-white placeholder-gray-700 outline-none focus:border-sky-600/40 focus:bg-white/10 transition-all uppercase tracking-widest font-mono"
                                placeholder="ADMIN_IDENTIFIER" />
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="space-y-2">
                        <div class="relative group/input">
                            <span
                                class="absolute left-5 top-1/2 -translate-y-1/2 text-gray-600 group-focus-within/input:text-sky-500 transition-colors z-10">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                                    </path>
                                </svg>
                            </span>
                            <input type="password" name="pass" required
                                class="w-full bg-white/5 border border-white/5 rounded-2xl pl-14 pr-6 py-4 text-sm text-white placeholder-gray-700 outline-none focus:border-sky-600/40 focus:bg-white/10 transition-all font-mono"
                                placeholder="••••••••••••" />
                        </div>
                    </div>

                    <div id="error-msg" class="hidden animate-in fade-in slide-in-from-top-2">
                        <div
                            class="flex items-center gap-3 px-6 py-4 rounded-2xl bg-red-600/10 border border-red-600/20">
                            <div class="w-1.5 h-1.5 rounded-full bg-red-600 animate-pulse"></div>
                            <span class="text-[10px] font-black text-red-500 uppercase tracking-widest">Auth_Failure:
                                Access Denied</span>
                        </div>
                    </div>

                    <!-- Login Button -->
                    <button type="submit"
                        class="group/btn w-full h-16 bg-sky-600 text-white font-black uppercase tracking-[0.25em] rounded-2xl flex items-center justify-center gap-4 shadow-[0_0_30px_rgba(14,165,233,0.3)] hover:bg-sky-500 hover:shadow-[0_0_50px_rgba(14,165,233,0.5)] transition-all active:scale-[0.98] overflow-hidden relative">
                        <div
                            class="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover/btn:translate-x-full transition-transform duration-1000">
                        </div>
                        <span class="relative z-10 flex items-center gap-3 text-[11px]">
                            <span>Establish Secure Link</span>
                            <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none"
                                stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </span>
                        <!-- Loading Spinner -->
                        <div class="spin hidden absolute inset-0 flex items-center justify-center bg-sky-600">
                            <svg class="animate-spin h-6 w-6 text-white" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor"
                                    stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor"
                                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                </path>
                            </svg>
                        </div>
                    </button>
                </form>

                <div class="mt-10 text-center">
                    <a href="/"
                        class="text-[9px] font-black text-gray-600 hover:text-white uppercase tracking-widest transition-all inline-flex items-center gap-2 group/back">
                        <span class="group-hover/back:-translate-x-1 transition-transform">←</span> Abort to Client
                        Terminal
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT DECORATION (Optional stats or something techy) -->
        <div class="hidden xl:block w-48 animate-in fade-in slide-in-from-right-8 duration-1000">
            <div class="space-y-8">
                <div class="text-[8px] font-mono text-gray-700 uppercase tracking-[0.3em]">
                    <p>Current_Load: 14%</p>
                    <p>Uptime: 99.99%</p>
                    <p>Shield: ACTIVE</p>
                </div>
                <div class="flex flex-col gap-2">
                    <div class="h-[1px] w-full bg-sky-600/20"></div>
                    <div class="h-[1px] w-2/3 bg-sky-600/40"></div>
                    <div class="h-[1px] w-1/3 bg-sky-600/60"></div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .tech-grid {
            background-image:
                linear-gradient(rgba(14, 165, 233, 0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(14, 165, 233, 0.05) 1px, transparent 1px);
            background-size: 60px 60px;
            mask-image: radial-gradient(circle at center, black, transparent 80%);
            animation: grid-move 20s linear infinite;
        }

        @keyframes grid-move {
            0% {
                background-position: 0 0;
            }

            100% {
                background-position: 60px 60px;
            }
        }

        .particles {
            position: absolute;
            inset: 0;
            background-image: radial-gradient(circle, rgba(14, 165, 233, 0.1) 1px, transparent 1px);
            background-size: 100px 100px;
            animation: float 15s linear infinite;
        }

        @keyframes float {
            0% {
                transform: translateY(0) rotate(0deg);
            }

            100% {
                transform: translateY(-100px) rotate(10deg);
            }
        }
    </style>

    <script>
        $(document).ready(function () {
            const $form = $('#admin-login-form');
            const $submit = $form.find('button[type="submit"]');
            const $error = $('#error-msg');

            $form.submit(function (e) {
                e.preventDefault();
                $error.addClass('hidden');
                $submit.find('.spin').removeClass('hidden');
                $submit.find('span').addClass('opacity-0');

                const data = $(this).serialize();
                setTimeout(() => {
                    $.post('/api/admin/login?' + data, function (res) {
                        if (res.status) {
                            window.location.href = '/admin/dashboard';
                        } else {
                            $submit.find('.spin').addClass('hidden');
                            $submit.find('span').removeClass('opacity-0');
                            $error.removeClass('hidden');
                        }
                    }).fail(() => {
                        $submit.find('.spin').addClass('hidden');
                        $submit.find('span').removeClass('opacity-0');
                        $error.removeClass('hidden').find('span').text('Auth_Error: System Offline');
                    });
                }, 800);
            });
        });
    </script>
</div>