    <style>
        @font-face {
            font-family: 'Regular';
            src: url(/fonts/Rajdhani-Regular.ttf);
        }

        :root {
            --bg-color: #050505;
            --primary-sky: #0ea5e9;
            --dark-sky: #0c4a6e;
            --text-color: #e5e7eb;
            --glass-bg: rgba(10, 10, 10, 0.6);
            --neon-glow: 0 0 15px rgba(14, 165, 233, 0.3);
        }

        body {
            font-family: 'Regular', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            overflow-x: hidden;
        }

        .glass-card {
            background: linear-gradient(135deg, rgba(10, 15, 20, 0.95), rgba(5, 10, 15, 0.98));
            border: 1px solid rgba(14, 165, 233, 0.3);
            box-shadow: 0 10px 30px -10px rgba(14, 165, 233, 0.2);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .glass-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-sky);
            box-shadow: 0 20px 40px -10px rgba(14, 165, 233, 0.4);
        }
    </style>
</head>

