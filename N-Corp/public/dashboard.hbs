    <script>
        function loadWhitelist() {
            $.get('/api/whitelist/list', (res) => {
                if (res.status) {
                    $('#whitelist-tbl').empty();
                    // Update record count
                    const count = res.data.length;
                    $('#uid-count').text(count < 10 ? '0' + count : count);

                    if (res.data.length === 0) {
                        $('#whitelist-tbl').append(`<tr><td colspan="4" class="px-8 py-16 text-center text-gray-600 font-bold uppercase text-[11px] tracking-[0.3em]">No operational records found in database</td></tr>`);
                    } else {
                        res.data.forEach(i => {
                            $('#whitelist-tbl').append(`
                                <tr class="hover:bg-white/[0.03] transition-colors group">
                                    <td class="px-8 py-6">
                                        <p class="text-base font-black text-white tracking-widest group-hover:text-sky-400 transition-colors">${i.uid}</p>
                                        <p class="text-[9px] font-black text-gray-600 uppercase tracking-[0.1em] mt-1 italic">${i.region}</p>
                                    </td>
                                    <td class="px-8 py-6">
                                        <p class="text-[11px] font-black text-gray-300 uppercase tracking-[0.15em]">${i.name}</p>
                                        <p class="text-[9px] font-black text-gray-600 uppercase mt-1">Exp: ${i.expiry || 'PERMANENT'}</p>
                                    </td>
                                    <td class="px-8 py-6">
                                        <span class="px-3 py-1.5 rounded-lg bg-green-500/10 text-green-500 text-[9px] font-black uppercase tracking-widest border border-green-500/20 shadow-[0_0_10px_rgba(34,197,94,0.1)]">${i.status}</span>
                                    </td>
                                    <td class="px-8 py-6 text-right">
                                        <button onclick="deleteWhitelist('${i._id}')" class="p-3 bg-white/5 rounded-xl text-gray-600 hover:text-red-500 hover:bg-red-500/10 hover:border-red-500/30 border border-transparent transition-all">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                        </button>
                                    </td>
                                </tr>
                            `);
                        });
                    }
                }
            });
        }

        function addWhitelist() {
            const uid = $('#w-uid').val();
            const name = $('#w-name').val();
            const region = $('#w-region').val();
            const expiry = $('#w-expiry').val();

            if (!uid) return alert('UID Protocol Required');

            $.post(`/api/whitelist/add?uid=${uid}&name=${name}&region=${region}&expiry=${expiry}`, (res) => {
                if (res.status) {
                    $('#w-uid, #w-name, #w-region, #w-expiry').val('');
                    loadWhitelist();
                }
            });
        }

        function deleteWhitelist(id) {
            if (confirm('Terminate intelligence clearance?')) {
                $.post(`/api/whitelist/delete?id=${id}`, (res) => {
                    if (res.status) loadWhitelist();
                });
            }
        }

        function loadUserInfo() {
            $.get('/api/user/info', (res) => {
                if (res.status && res.data.validTill) {
                    const diff = res.data.validTill - Date.now();
                    const days = Math.ceil(diff / (1000 * 60 * 60 * 24));
                    if (days <= 0) {
                        $('#user-expiry').text('Expired').addClass('text-red-500');
                    } else {
                        $('#user-expiry').text(days + ' Days');
                    }
                } else {
                    $('#user-expiry').text('Lifetime');
                }
            });
        }

        $(document).ready(function () {
            loadUserInfo();
            loadWhitelist();
        });</script>
