        }
    }

    .animate-fade-in-left {
        animation: fade-in-left 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }

    .animate-fade-in-right {
        animation: fade-in-right 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }

    .grid-background {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(14, 165, 233, 0.05) 1px, transparent 1px),
            linear-gradient(90deg, rgba(14, 165, 233, 0.05) 1px, transparent 1px);
        background-size: 50px 50px;
        mask-image: radial-gradient(circle at center, black, transparent 80%);
    }
</style>

<script>
    $(document).ready(function () {
        const $keyGroup = $("#key-group");
        const $credentialsGroup = $("#credentials-group");
        const $message = $(".login #message"), $submit = $(".login button[type='submit']");

        $("input[name='role']").change(function () {
            const role = $(this).val();
            $message.addClass("hidden");

            if (role === "key") {
                $keyGroup.removeClass("hidden").addClass("animate-in fade-in slide-in-from-top-4");
                $credentialsGroup.addClass("hidden");
                $("#key").attr("required", true);
                $("input[name='user'], input[name='pass']").removeAttr("required");
            } else {
                $keyGroup.addClass("hidden");
                $credentialsGroup.removeClass("hidden").addClass("animate-in fade-in slide-in-from-bottom-4");
                $("#key").removeAttr("required");
                $("input[name='user'], input[name='pass']").attr("required", true);
            };
        });

        function showLoading(isLoading) {
            $submit.prop("disabled", isLoading);
            $submit.find(".text").text(isLoading ? "Processing..." : "Initialize Access");
            $submit.find(".spin").toggleClass("hidden", !isLoading);
            $submit.find("svg").toggleClass("hidden", isLoading);
        };

        $(".login").submit(e => {
            e.preventDefault();
            showLoading(true);
            $message.addClass("hidden");

            let userVal, passVal;
            const role = $("input[name='role']:checked").val();

            if (role === "key")
                userVal = $("#key").val();
            else {
                userVal = $("input[name='user']").val();
                passVal = $("input[name='pass']").val();
            };

            setTimeout(() => {
                let queryString;
                if (role === "key") {
                    queryString = `key=${userVal}&role=${role}`;
                } else {
                    queryString = `user=${userVal}&pass=${passVal}&role=${role}`;
                }

                $.post(`/api/login?${queryString}`, data => {
                    if (data.status) {
                        if (document.querySelector("#save-input").checked)
                            localStorage.setItem("storage", `${role}~${userVal}~${role === "key" ? "" : passVal}`);

                        // Success animation/redirect
                        $submit.addClass("bg-green-600 shadow-[0_0_30px_rgba(22,163,74,0.4)]");
                        $submit.find(".text").text("Access Granted");

                        setTimeout(() => window.location.replace("/dashboard"), 500);
                    } else {
                        if (role !== "key") $("#password").val("");
                        showLoading(false);
                        $message.removeClass("hidden").find("p").text(data.message || "Access Denied");
                    };
                }).fail(() => {
                    showLoading(false);
                    $message.removeClass("hidden").find("p").text("System Error (500)");
                });
            }, 1200);
        });

        // Load saved session
        if (localStorage.getItem("storage")) {
            const [role, user, pass] = localStorage.getItem("storage").split("~");
            document.querySelector("#save-input").checked = true;
            $(`input[name="role"][value="${role}"]`).prop("checked", true).trigger("change");
            if (role === "key") $("#key").val(user);
            else {
                $("input[name='user']").val(user);
                $("input[name='pass']").val(pass);
            };
        };
    });
</script>